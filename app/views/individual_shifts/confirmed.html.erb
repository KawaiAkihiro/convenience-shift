<div class="row">
   <div class="col-md-6 col-md-offset-3">
      <% @shifts.each do |shift|%>
      <li>
        <%= shift.start.strftime("%Y-%m-%d %H:%M")%> -
        <%= shift.finish.strftime("%Y-%m-%d %H:%M")%>
        <%= link_to "消去する",shift, {method: :delete, data: { confirm: 'この従業員を削除して間違いありませんか？'}} %>
      </li>
      <% end %>
   </div>
</div>      