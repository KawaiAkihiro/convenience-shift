<h1>シフト作成</h1>

<div class="row">
   <div class="col-md-4 col-md-offset-3">
      <%= form_with(model: @shift, local: true) do |f| %>
         <%= render 'shared/error_messages', object: f.object %>

        <div class="form-inline text-left">
         <%= f.label :start,"出勤時刻", {class:'control-label'}%>
         <%= f.datetime_field :start, class: 'form-control' %>

         <%= f.label :finish,"退勤時刻", {class:'control-label'}%>
         <%= f.time_field :finish, class: 'form-control' %>
        </div>
         <%= f.submit "登録",   class: "btn btn-primary" %>
         <%= f.submit "もう一度",class: "btn btn-primary"%>
      <% end %>
      <%= link_to "確定する",'#' ,class: "btn btn-primary" %>
    <% @shifts.each do |shift|%>
      <li>
        <%= shift.start.strftime("%Y-%m-%d %H:%M")%> -
        <%= shift.finish.strftime("%H:%M")%>
      </li>
    <% end %>
   </div>

   
</div>        