<h1>シフト作成</h1>

<div class="row">
   <div class="col-md-6 col-md-offset-3">
      <%= form_with(model: @shift, local: true) do |f| %>
         <%= render 'shared/error_messages', object: f.object %>

        <div class="form-inline text-left">
         <%= f.label :start,"出勤時刻", {class:'control-label'}%>
         <%= f.datetime_field :start, class: 'form-control' %>

         <%= f.label :finish,"退勤時刻", {class:'control-label'}%>
         <%= f.time_field :finish, class: 'form-control' %>
        </div>
         <%= f.submit "登録",   class: "btn btn-primary" %>
         <%= f.submit "もう一度",class: "btn btn-primary"%>
      <% end %>
    <% if @shifts.present?%>
      <%= link_to "確定する",confirm_individual_shifts_path ,class: "btn btn-primary" %>
      <% @shifts.each do |shift|%>
        <li>
          <%= shift.start.strftime("%Y-%m-%d %H:%M")%> -
          <%= shift.finish.strftime("%Y-%m-%d %H:%M")%>
          <%= link_to "消去する",shift, {method: :delete, data: { confirm: '削除して間違いありませんか？'}} %>
        </li>
      <% end %>
    <% end %> 
   </div>
</div>        