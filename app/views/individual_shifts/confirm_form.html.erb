<div class="row">
   <div class="col-md-4 col-md-offset-3">
    <% @shifts.each do |shift|%>
      <li>
        <%= shift.start.strftime("%Y-%m-%d %H:%M")%> -
        <%= shift.finish.strftime("%H:%M")%>
      </li>
    <% end %>
    
    <%= link_to "確定する",confirm_individual_shifts_path, method: :patch ,class: "btn btn-primary" %>
    <%= link_to "戻る", new_individual_shift_path, class: "btn btn-primary" %>
   </div>
</div>   