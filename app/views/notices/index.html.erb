<% if @notices.count != 0 %>
    <% @notices.each do |notice| %>
        <% if notice.mode == "instead"%>
            <p>交代申請</p>
        <% elsif notice.mode == "delete" %>
            <p>削除申請</p>
        <% end %> 
        <%= link_to "詳細", notice_path(notice) %><br>
    <% end %>
<% else %>
    <h1>通知はありません</h1>
<% end %>