<header class="navbar navbar-expand-lg mr-auto">
   <div class="container">
      <%= link_to "７ルール", root_path, id: "logo" %>
      <div id="menu_open">
      <label class="toggle" for="open"><i class="fa fa-bars" aria-hidden="true"></i></label>
      <input id="open" type="checkbox">
      <div id="menu">
         <nav>
            <ul>
               <li>
                  <label class="toggle" for="close"><i class="fas fa-times"></i></label>
                  <input id="close" type="checkbox">
               </li>
               <li><%= link_to "ヘルプ", help_path, class:"help" %></li>
               <div class="line"></div>
               
               <% if logged_in? && logged_in_staff? %>
                  <%= render "layouts/menu_master" %>
                  <br>
                  <div class="line"></div>
                  <%= render "layouts/menu_staff" %>
               <% elsif !logged_in? && logged_in_staff? %>
                  <%= render "layouts/menu_staff" %>
               <% elsif logged_in? && !logged_in_staff? %>  
                  <%= render "layouts/menu_master" %>
               <% else%>
                  <li class="nav-link"><%= link_to "店長ログイン",     login_path %></li>   
               <% end %>  
            </ul>
         </nav>
      </div>   
   </div>   
</header>   
    
    