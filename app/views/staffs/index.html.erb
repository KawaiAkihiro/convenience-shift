<h1>従業員</h1>

<%= will_paginate %>

<ul class="staffs">
  <% @staffs.each do |staff| %>
     <li>
        <%= staff.staff_number %>
        <%= staff.staff_name %>
        <%= link_to "編集", edit_staff_path(staff) %>
        <%= link_to "削除", staff, {method: :delete, data: { confirm: 'この従業員を削除して間違いありませんか？'}} %>
     </li>
  <% end %>　
</ul>      

<%= will_paginate %>